---
import BaseLayout from '../layouts/BaseLayout.astro';
import gallery from '../data/gallery.json';

// Get a selection of photos for the preview
const previewPhotos = [
  ...gallery.corsi.slice(0, 2),
  ...gallery.galleria.filter(img => img.src.includes('gruppo')).slice(0, 1),
  ...gallery.regate.slice(0, 1),
];
---

<BaseLayout title="Home" description="Circolo Nautico Caldè - Scuola Vela FIV e Regate sul Lago Maggiore dal 1970. Corsi di vela per giovani e adulti a Castelveccana.">
  
  <!-- HERO + STATS: Full viewport wrapper (account for header + bottom nav) -->
  <div class="h-[calc(100svh-4rem)] md:h-[calc(100svh-5rem)] flex flex-col pb-16 md:pb-0">
    
    <!-- HERO IMAGE with floating card -->
    <section class="hero-section relative flex-1 min-h-0 overflow-hidden flex items-end">
      <img 
        src="images/hero/calde-aerial.jpg" 
        alt="Vista aerea della baia di Caldè sul Lago Maggiore"
        class="absolute inset-0 w-full h-full object-cover object-bottom"
        loading="eager"
        fetchpriority="high"
      />
      
      <!-- Floating glass card - full on mobile, aligned right on desktop to show the lake -->
      <div class="relative z-10 w-full px-4 md:px-6 lg:px-8 pb-4 md:pb-6">
        <div class="max-w-6xl mx-auto flex justify-center md:justify-end">
          <div class="w-full md:w-[50%] lg:w-[40%] backdrop-blur-xl rounded-2xl md:rounded-3xl p-4 md:p-6 shadow-2xl border border-white/15" style="background-color: rgba(30, 58, 95, 0.45);">
            <!-- Headline -->
            <h1 class="text-xl md:text-2xl lg:text-3xl font-black leading-tight text-white">
              Vivi la Vela<br class="hidden md:inline" /><span class="text-[var(--color-accent-secondary)]"> sul Lago Maggiore</span>
            </h1>
            <p class="text-xs md:text-sm text-white/80 mt-1 md:mt-2">
              Scuola Vela FIV dal 1970 · Corsi per tutte le età
            </p>
            <!-- CTA -->
            <div class="mt-4 flex justify-center">
              <a
                href="corsi"
                class="inline-flex items-center gap-1.5 md:gap-2 px-4 md:px-6 py-2 md:py-3 bg-[var(--color-accent-secondary)] hover:bg-[var(--color-accent-secondary)]/90 text-[var(--color-accent-primary)] font-bold text-xs md:text-base rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105"
              >
                Scopri i Corsi
                <svg class="w-3.5 md:w-4 h-3.5 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Stats bar -->
    <section class="bg-[var(--color-accent-primary)] dark:bg-[var(--color-accent-primary-dark)] py-4 md:py-6 shrink-0">
      <div class="max-w-6xl mx-auto px-4 lg:px-6">
        <div class="grid grid-cols-3 text-center text-white divide-x divide-white/20">
          <div class="px-4 md:px-8">
            <div class="text-2xl md:text-3xl font-black text-[var(--color-accent-secondary)]">54</div>
            <div class="text-[10px] md:text-sm text-white/70 mt-0.5 md:mt-1">Anni di attività</div>
          </div>
          <div class="px-4 md:px-8">
            <div class="text-2xl md:text-3xl font-black text-[var(--color-accent-secondary)]">FIV</div>
            <div class="text-[10px] md:text-sm text-white/70 mt-0.5 md:mt-1">Scuola certificata</div>
          </div>
          <div class="px-4 md:px-8">
            <div class="text-2xl md:text-3xl font-black text-[var(--color-accent-secondary)]">6-99</div>
            <div class="text-[10px] md:text-sm text-white/70 mt-0.5 md:mt-1">Anni di età</div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- GALLERY PREVIEW -->
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 lg:px-6">
      <!-- Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-black mb-4" style="font-size: var(--text-3xl);">
          La Vela a Caldè
          </h2>
        <p class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] max-w-2xl mx-auto">
          Corsi per giovani e adulti, regate, e una comunità di appassionati sul Lago Maggiore
          </p>
        </div>
      
      <!-- Photo Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4 mb-8">
        {previewPhotos.map((img, idx) => (
          <a 
            href="galleria" 
            class:list={[
              "group relative overflow-hidden rounded-2xl",
              idx === 0 ? "col-span-2 row-span-2 aspect-square" : "aspect-square"
            ]}
          >
            <img 
              src={img.src} 
              alt={img.alt}
              loading="lazy"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
          </a>
        ))}
      </div>
      
      <!-- Link to Gallery -->
      <div class="text-center">
        <a 
          href="galleria" 
          class="inline-flex items-center gap-2 text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)] font-semibold hover:underline"
        >
          Vedi tutte le foto
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <!-- CORSI: Cards with real content -->
  <section class="py-16 md:py-24 bg-secondary">
    <div class="max-w-6xl mx-auto px-4 lg:px-6">
      <!-- Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-black mb-4" style="font-size: var(--text-3xl);">
          I Nostri Corsi
        </h2>
        <p class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] max-w-2xl mx-auto">
          Programmi FIV per ogni livello, dai principianti ai regatanti
        </p>
      </div>
      
      <!-- Course Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Giovani -->
        <a href="corsi" class="group bg-white dark:bg-[var(--color-bg-primary-dark)] rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <div class="relative h-48 overflow-hidden">
            <img 
              src="images/corsi/giovane-velista.jpg" 
              alt="Corso vela giovani"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute top-3 left-3 px-3 py-1 bg-[var(--color-accent-primary)] text-white text-xs font-bold rounded-full">
              6-18 ANNI
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 group-hover:text-[var(--color-accent-primary)] transition-colors">
              Scuola Vela Giovani
            </h3>
            <p class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] text-sm mb-4">
              Corsi settimanali estivi con brevetto FIV. Impara le basi della vela divertendoti.
            </p>
            <span class="inline-flex items-center text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)] font-semibold text-sm">
              Scopri di più →
            </span>
          </div>
        </a>
        
        <!-- Adulti -->
        <a href="corsi" class="group bg-white dark:bg-[var(--color-bg-primary-dark)] rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <div class="relative h-48 overflow-hidden">
            <img 
              src="images/corsi/scuola-vela-azione.jpg" 
              alt="Corso vela adulti"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute top-3 left-3 px-3 py-1 bg-[var(--color-accent-secondary)] text-[var(--color-accent-primary)] text-xs font-bold rounded-full">
              ADULTI
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 group-hover:text-[var(--color-accent-primary)] transition-colors">
              Corsi Weekend
            </h3>
            <p class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] text-sm mb-4">
              Non è mai troppo tardi per imparare. Corsi nel weekend per chi lavora.
            </p>
            <span class="inline-flex items-center text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)] font-semibold text-sm">
              Scopri di più →
            </span>
          </div>
        </a>
        
        <!-- Cabinati -->
        <a href="corsi" class="group bg-white dark:bg-[var(--color-bg-primary-dark)] rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <div class="relative h-48 overflow-hidden">
            <img 
              src="images/corsi/corso-cabinati.jpg" 
              alt="Corso cabinati"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute top-3 left-3 px-3 py-1 bg-[var(--color-accent-tertiary)] text-white text-xs font-bold rounded-full">
              AVANZATO
          </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 group-hover:text-[var(--color-accent-primary)] transition-colors">
              Corso Cabinati
            </h3>
            <p class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] text-sm mb-4">
              Patente nautica e navigazione su barche più grandi per chi vuole fare il salto.
            </p>
            <span class="inline-flex items-center text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)] font-semibold text-sm">
              Scopri di più →
            </span>
          </div>
        </a>
      </div>
    </div>
  </section>
  
  <!-- LOCATION: Dove Siamo -->
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 lg:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <!-- Map -->
        <div class="relative rounded-2xl overflow-hidden shadow-xl aspect-[4/3]">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2781.8!2d8.7127!3d45.9677!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4786851c8f6c8a5d%3A0x1!2sCald%C3%A8%2C%20Castelveccana!5e0!3m2!1sit!2sit!4v1"
            class="absolute inset-0 w-full h-full border-0"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Mappa del Circolo Nautico Caldè"
          ></iframe>
          </div>
        
        <!-- Info -->
        <div>
          <h2 class="text-3xl md:text-4xl font-black mb-6" style="font-size: var(--text-3xl);">
            Dove Siamo
          </h2>
          <p class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] mb-8 leading-relaxed">
            Il Circolo Nautico Caldè si trova nella splendida baia di Caldè, frazione di Castelveccana, sulla sponda lombarda del Lago Maggiore. Una location unica, protetta dai venti e ideale per imparare a navigare.
          </p>
          
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-[var(--color-accent-primary)]/10 dark:bg-[var(--color-accent-primary-dark)]/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold">Indirizzo</div>
                <div class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)]">Via Maggiore 36, 21010 Caldè (VA)</div>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-[var(--color-accent-primary)]/10 dark:bg-[var(--color-accent-primary-dark)]/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold">Telefono</div>
                <a href="tel:+393339769317" class="text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)] hover:underline">333 976 9317</a>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-[var(--color-accent-primary)]/10 dark:bg-[var(--color-accent-primary-dark)]/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold">Email</div>
                <a href="mailto:segreteria@cncvela.it" class="text-[var(--color-accent-primary)] dark:text-[var(--color-accent-primary-dark)] hover:underline">segreteria@cncvela.it</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- FINAL CTA -->
  <section class="relative py-20 md:py-28 overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-[var(--color-accent-primary)] dark:bg-[var(--color-accent-primary-dark)]">
      <img 
        src="images/atmosfera/tramonto-lago.jpg" 
        alt=""
        class="absolute inset-0 w-full h-full object-cover opacity-30 mix-blend-overlay"
      />
    </div>
    
    <div class="relative z-10 max-w-3xl mx-auto px-4 lg:px-6 text-center text-white">
      <h2 class="text-3xl md:text-4xl font-black mb-6" style="font-size: var(--text-3xl);">
        Pronto a Salpare?
      </h2>
      <p class="text-lg text-white/80 mb-10 max-w-xl mx-auto">
        Contattaci per informazioni sui corsi o vieni a trovarci al circolo. La baia di Caldè ti aspetta.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="corsi"
          class="inline-flex items-center justify-center px-8 py-4 bg-[var(--color-accent-secondary)] text-[var(--color-accent-primary)] font-bold rounded-full hover:bg-[var(--color-accent-secondary)]/90 transition-colors"
        >
          Vedi i Corsi
        </a>
        <a
          href="mailto:segreteria@cncvela.it"
          class="inline-flex items-center justify-center px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-bold rounded-full border-2 border-white/30 hover:bg-white/20 transition-colors"
        >
          Scrivici
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero animation */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  .hero-section img {
    animation: subtle-zoom 20s ease-in-out infinite alternate;
  }
  
  @keyframes subtle-zoom {
    0% { transform: scale(1); }
    100% { transform: scale(1.05); }
  }
</style>
