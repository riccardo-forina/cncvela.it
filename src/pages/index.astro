---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import gallery from '../data/gallery.json';

// Import images
import heroImage from '../assets/images/hero/calde-aerial.jpg';
import giovaneVelista from '../assets/images/corsi/giovane-velista.jpg';
import scuolaVelaAzione from '../assets/images/corsi/scuola-vela-azione.jpg';
import corsoCabinati from '../assets/images/corsi/corso-cabinati.jpg';
import tramontoLago from '../assets/images/atmosfera/tramonto-lago.jpg';

// Import all images dynamically for gallery preview optimization
const allImageModules = import.meta.glob<{ default: ImageMetadata }>(
  '../assets/images/**/*.{jpg,jpeg,png}',
  { eager: true }
);

// Helper to get optimized image from public path
function getOptimizedImage(publicPath: string): ImageMetadata | undefined {
  const assetPath = `../assets/${publicPath}`;
  const module = allImageModules[assetPath];
  return module?.default;
}

// Get a selection of photos for the preview
const previewPhotos = [
  ...gallery.corsi.slice(0, 2),
  ...gallery.galleria.filter(img => img.src.includes('gruppo')).slice(0, 1),
  ...gallery.regate.slice(0, 1),
];
